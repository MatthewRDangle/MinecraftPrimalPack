{
  "format_version": "1.8.0",
  "animations": {
    "animation.giant_spider.base_pose": {
      "loop": true,
      "bones": {
	    "waist": { "position": [ 0.0, 0.0, 0.0 ] },
        "rightLeg": { "position": [ 0.0, 0.0, 0.0 ] },
        "leftLeg": { "position": [ 0.0, 0.0, 0.0 ] },
        "rightArm": { "position": [ 0.0, 0.0, 0.0 ] },
        "leftArm": { "position": [ 0.0, 0.0, 0.0 ] }
      }
    },
    "animation.giant_spider.look_at_target.default": {
      "loop": true,
      "bones": {
        "head": { "rotation": [ "query.target_x_rotation", "query.target_y_rotation", 0.0 ] }
      }
    },
    "animation.giant_spider.look_at_target.gliding": {
      "loop": true,
      "bones": {
        "head": { "rotation": [ "-45.0", "query.target_y_rotation", 0.0 ] }
      }
    },
    "animation.giant_spider.look_at_target.swimming": {
      "loop": true,
      "bones": {
        "head": { "rotation": [ "Math.lerp(query.target_x_rotation, -45.0, variable.swim_amount)", "query.target_y_rotation", 0.0 ] }
      }
    },
    "animation.giant_spider.move": {
      "loop": true,
      "bones": {
        "rightArm": { "rotation": [ "variable.tcos1", 0.0, 0.0 ] },
        "leftArm": { "rotation": [ "variable.tcos0", 0.0, 0.0 ] },
        "rightLeg": { "rotation": [ "variable.tcos0 * 1.4", 0.0, 0.0 ] },
        "leftLeg": { "rotation": [ "variable.tcos1 * 1.4", 0.0, 0.0 ] }
      }
    },
    "animation.giant_spider.holding": {
      "loop": true,
      "bones": {
        "rightArm": { "rotation": [ "variable.is_holding_right ? (-this * 0.5 - 18.0) : 0.0", 0.0, 0.0 ] },
        "leftArm": { "rotation": [ "variable.is_holding_left ? (-this * 0.5 - 18.0) : 0.0", 0.0, 0.0 ] }
      }
    },
    "animation.giant_spider.bow_and_arrow": {
      "loop": true,
      "bones": {
        "rightArm": { "rotation": [ "query.target_x_rotation - 90.0 + Math.sin(global.life_time * 76.8) * 2.865 - this", "query.target_y_rotation - 5.73", "(Math.cos(global.life_time * 103.2) * 2.865) + 2.865" ] },
        "leftArm": { "rotation": [ "query.target_x_rotation - 90.0 - Math.sin(global.life_time * 76.8) * 2.865 - this", "query.target_y_rotation + 28.65", "-(Math.cos(global.life_time * 103.2) * 2.865) - 2.865" ] }
      }
    }
  }
}